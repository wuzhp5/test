<?xml version="1.0" encoding="GBK"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- 环境变量 -->
	<bean id="context" class="nc.vo.uif2.LoginContext"></bean>

	<!-- 模型部分配置*********************************************************** -->

	<!-- 应用服务类，负责进行模型操作的处理 -->
	<bean id="hModelModelService" class="nc.ui.uapbd.supcalendar.ace.serviceproxy.AceSupcalendarMaintainProxy"/>

	
	<!-- 对象转换器工厂，由此获取操作对象的特征信息 -->
	<bean id="BOAdapterFactory" class="nc.vo.bd.meta.GeneralBDObjectAdapterFactory">
		<property name="mode" value="MD"/>
	</bean>

   
	<!-- 层次结构构造策略 -->
	<bean id="hModelTreeCreateStrategy" class="nc.vo.bd.meta.BDObjectTreeCreateStrategy">
		<property name="factory" ref="BOAdapterFactory" />
		<property name="rootName" value="供应商送货" />
	</bean>


	<!-- 模型元素 -->
	<!--========= 模型元素：[PUBAPP层次模型(HierachicalDataAppModel)实例对象] ==========-->
	<bean id="hModel" class="nc.ui.pubapp.uif2app.model.HierachicalDataAppModel">
		<property name="context"><ref bean="context"/></property>
		<property name="service"><ref bean="hModelModelService" /></property>
		<property name="businessObjectAdapterFactory"><ref bean="BOAdapterFactory"/></property>
		<property name="treeCreateStrategy" ref="hModelTreeCreateStrategy"></property>
	</bean>

	
	<!-- 数据模型管理器，主要负责各种方式的模型初始化 -->
	<bean id="hModelModelDataManager" class="nc.ui.uapbd.supcalendar.ace.serviceproxy.SupcalendarModelDataManager">
		<property name="model"><ref bean="hModel"/></property>
		<property name="service"><ref bean="hModelModelService" /></property>
	</bean>

	<!-- 模板容器，负责对模板的统一装载 -->
	<bean id="templateContainer" class="nc.ui.pubapp.uif2app.view.TemplateContainer"  init-method="load">
		<property name="context" ref="context"/>
		<property name="nodeKeies">
			<list>
				<value>bt</value>
			</list>
		</property>
	</bean>

	<!--====== 视图元素：[树控件(TreePanel)实例对象] ==============-->
	<bean id="treePanel" class="nc.ui.uif2.components.TreePanel" init-method="initUI">
		<property name="model"><ref bean="hModel" /></property>
	</bean>

	<!--====== 视图元素：[组织面板控件实例对象] ==============-->
	<bean id="viewa" class="nc.ui.pubapp.uif2app.view.OrgPanel" init-method="initUI">
		<property name="model"><ref bean="hModel" /></property>
		<property name="dataManager" ref="hModelModelDataManager" />
	</bean>

	<!--====== 视图元素：[PUBAPP表单控件(BillForm)实例对象] ==============-->
	<bean id="billForm" class="nc.ui.uapbd.supcalendar.ace.handler.SupCalendarEditor" init-method="initUI">
		<property name="model"><ref bean="hModel" /></property>
		<property name="nodekey" value="bt" />
		<!-- 表体行操作按钮注册，这只是一组默认设置，开发人员需要自己在此添加其他需要的表体行操作按钮 -->
		<property name="bodyActionMap">
			<map>
				<entry key="supcalendar_m">
					<list>
						<bean class="nc.ui.bd.cust.baseinfo.action.CustContactsAddLineAction">
							<property name="model" ref="hModel" />
							<property name="cardpanel" ref="billForm" />
						</bean>
						<bean class="nc.ui.uif2.actions.InsertLineAction">
							<property name="model" ref="hModel" />
							<property name="cardpanel" ref="billForm" />
						</bean>
						<bean class="nc.ui.uif2.actions.DelLineAction">
							<property name="model" ref="hModel" />
							<property name="cardpanel" ref="billForm" />
						</bean>
					</list>
				</entry>
			</map>
		</property>
	</bean>
	
	<!-- 界面布局总装*********************************************************** -->
	<bean id="container" class="nc.ui.uif2.TangramContainer" init-method="initUI">
		<property name="tangramLayoutRoot">
					<bean class="nc.ui.uif2.tangramlayout.node.HSNode">
				<property name="left">
					<bean class="nc.ui.uif2.tangramlayout.node.CNode">
						<property name="component">
							<ref bean="treePanel" />
						</property>
					</bean>
				</property>
				<property name="right">
					<bean class="nc.ui.uif2.tangramlayout.node.VSNode">
						<property name="up">
							<bean class="nc.ui.uif2.tangramlayout.node.CNode">
								<property name="component">
									<ref bean="viewa" />
								</property>
							</bean>
						</property>
						<property name="down">
							<bean class="nc.ui.uif2.tangramlayout.node.CNode">
								<property name="component">
									<ref bean="billForm" />
								</property>
							</bean>
						</property>
						<property name="dividerLocation" value="75.0f" />
						<property name="name" value="" />
					</bean>
				</property>
				<property name="dividerLocation" value="151.0f" />
				<property name="name" value="" />
			</bean>

		</property>
		<property name="actions">
			<list>
				<ref bean="addAction" />
				<ref bean="editAction" />
				<ref bean="deleteAction" />
				<ref bean="refreshAction" />

			</list>
		</property>
		<property name="editActions">
			<list>
				<ref bean="saveAction" />
				<ref bean="cancelAction" />
				
			</list>
		</property>

		<property name="model">
			<ref bean="hModel" />
		</property>		
	</bean>
	
	<!-- 打开节点监听 newadd-->
	<bean id="InitDataListener" class="nc.ui.pubapp.uif2app.model.DefaultFuncNodeInitDataListener">
		<property name="model" ref="hModel"/>
		<property name="context" ref="context"></property>
		<property name="voClassName" value="nc.vo.uapbd.supcalendar.SupCalendarBaseVO"/>
	</bean>



	<!-- ClosingListener 编辑态关闭节点时提示是否保存//newadd***************************************************-->
	<!-- 节点关闭前校验 -->
	<bean id="ClosingListener" class="nc.ui.pubapp.common.validateservice.ClosingCheck" >
		<property name="model" ref="hModel" />
		<property name="saveAction" ref="saveAction" />
	</bean>


	<!-- 事件监听newadd -->
	<bean id="hModelEventMediator" class="nc.ui.pubapp.uif2app.model.AppEventHandlerMediator">
		<property name="model" ref="hModel" />
		<property name="handlerMap">
			<map>
				<!-- 卡片表头表尾编辑前事件 -->
				<entry key="nc.ui.pubapp.uif2app.event.card.CardHeadTailBeforeEditEvent">
					<list>
						<ref bean="cardHeadBeforeEdit" />
					</list>
				</entry>
				<!-- 卡片表体编辑前事件 -->
				<entry key="nc.ui.pubapp.uif2app.event.card.CardBodyBeforeEditEvent">
					<list>
						<ref bean="cardBodyBeforeEdit" />
					</list>
				</entry>
				
				<!-- 卡片表头表尾编辑后事件 -->
				<entry key="nc.ui.pubapp.uif2app.event.card.CardHeadTailAfterEditEvent">
					<list>
						<ref bean="cardHeadAfterEdit" />
					</list>
				</entry>
				<!-- 卡片表体编辑后事件 -->
				<entry key="nc.ui.pubapp.uif2app.event.card.CardBodyAfterEditEvent">
					<list>
						<ref bean="cardBodyAfterEdit" />
					</list>
				</entry>
			</map>
		</property>
	</bean>
	<!-- 卡片表头表尾编辑前事件处理类 -->
	<bean id="cardHeadBeforeEdit"
		class="nc.ui.uapbd.supcalendar.ace.beforeedit.CardHeadTailBeforeEditEventHandler" >
		<property name="BillForm" ref="billForm" />
	</bean>
	<!-- 卡片表体编辑前事件处理类 -->
	<bean id="cardBodyBeforeEdit"
		class="nc.ui.uapbd.supcalendar.ace.beforeedit.CardBodyBeforeEditEventHandler" >
		<property name="BillForm" ref="billForm" />
	</bean>

	<!-- 卡片表头表尾编辑事件处理类 -->
	<bean id="cardHeadAfterEdit"
		class="nc.ui.uapbd.supcalendar.ace.afteredit.CardHeadTailAfterEditEventHandler" >
		<property name="BillForm" ref="billForm" />
	</bean>

	<!-- 卡片表体编辑事件处理类  -->
	<bean id="cardBodyAfterEdit"
		class="nc.ui.uapbd.supcalendar.ace.afteredit.CardBodyAfterEditEventHandler" >
		<property name="BillForm" ref="billForm" />
	</bean>


	<!-- Action部分 ***********************************************************-->
	<!--======= 动作：[newActions] [新增] ===========-->
	<bean id="addAction" class="nc.ui.pubapp.uif2app.actions.AddAction">
		<property name="model"><ref bean="hModel"/></property>
		<property name="exceptionHandler"><ref bean="exceptionHandler" /></property>
	</bean>

	<!--======= 动作：[newActions] [修改] ===========-->
	<bean id="editAction" class="nc.ui.pubapp.uif2app.actions.EditAction">
		<property name="model"><ref bean="hModel"/></property>
		<property name="exceptionHandler"><ref bean="exceptionHandler" /></property>
	</bean>

	<!--======= 动作：[newActions] [删除] ===========-->
	<bean id="deleteAction" class="nc.ui.pubapp.uif2app.actions.DeleteAction">
		<property name="model"><ref bean="hModel"/></property>
		<property name="exceptionHandler"><ref bean="exceptionHandler" /></property>
	</bean>

	<!--======= 动作：[newActions] [刷新] ===========-->
	<bean id="refreshAction" class="nc.ui.pubapp.uif2app.actions.RefreshAction">
		<property name="model"><ref bean="hModel"/></property>
		<property name="dataManager"><ref bean="hModelModelDataManager"/></property>
		<property name="exceptionHandler"><ref bean="exceptionHandler" /></property>
	</bean>

	<!--======= 动作：[newActions] [保存] ===========-->
	<bean id="saveAction" class="nc.ui.pubapp.uif2app.actions.SaveAction">
		<property name="model"><ref bean="hModel"/></property>
		<property name="editor"><ref bean="billForm"/></property>
		<property name="exceptionHandler"><ref bean="exceptionHandler" /></property>
	</bean>

	<!--======= 动作：[newActions] [取消] ===========-->
	<bean id="cancelAction" class="nc.ui.pubapp.uif2app.actions.CancelAction">
		<property name="model"><ref bean="hModel"/></property>
		<property name="editor"><ref bean="billForm"/></property>
		<property name="exceptionHandler"><ref bean="exceptionHandler" /></property>
	</bean>

	<bean id="exceptionHandler" class="nc.ui.uif2.DefaultExceptionHanler">
		<constructor-arg><ref bean="container"/></constructor-arg>
		<property name="context"><ref bean="context" /></property>
	</bean>
	
</beans>
